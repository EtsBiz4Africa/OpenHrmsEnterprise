<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_hr_employee_family_tree" model="ir.ui.view">
        <field name="name">hr.employee.family.tree</field>
        <field name="model">hr.employee.family</field>
        <field name="arch" type="xml">
        <tree string="Employee Family">
            <field name="member_name"/>
            <field name="employee_id"/>
            <field name="member_gender"/>
            <field name="birth_date"/>
            <field name="place_of_birth"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_employee_family" model="ir.actions.act_window">
            <field name="name">Employee's family members</field>
            <field name="res_model">hr.employee.family</field>
            <field name="view_mode">tree</field>
    </record>

    <menuitem id="family_members"
                parent="hr.menu_hr_employee_payroll"
                action="action_hr_employee_family"
                groups="base.group_no_one"
                sequence="10"/>
</odoo>